<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/mainGreenColor</item>
        <item name="colorPrimaryDark">@color/mainDarkGreenColor</item>
    </style>

    <style name="NoActionBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorAccent">#fff</item>
        <item name="colorPrimary">@color/mainGreenColor</item>
        <item name="colorPrimaryDark">@color/mainDarkGreenColor</item>
        <item name="android:textColorHint">@color/mainGreenColor</item>
        <item name="colorControlActivated">@color/mainGreenColor</item>
        <item name="colorControlNormal">@color/mainGreenColor</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="MessageBarMenu">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:padding">12dp</item>
        <item name="android:tint">@color/mainText</item>
    </style>

    <style name="LoginTheme" parent="AppTheme.NoActionBar">
        <item name="android:textColorHint">#fff</item>
        <item name="colorControlActivated">#fff</item>
        <item name="colorControlNormal">#ddd</item>
        <item name="counterTextAppearance">@style/TextAppearance.Design.Counter</item>
        <item name="counterOverflowTextAppearance">@style/TextAppearance.Design.Counter.Overflow
        </item>

    </style>

    <style name="LoginButton" parent="AppTheme">
        <item name="colorButtonNormal">#009900</item>
    </style>

    <style name="AcceptButton" parent="AppTheme">
        <item name="colorButtonNormal">@color/mainGreenColor</item>
    </style>

</resources>
